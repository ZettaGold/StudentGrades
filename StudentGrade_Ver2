#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

int main()
{
	int nbStudents, grades[20], bestGrade = -1, worstGrade = 101;
	string studentNames[20], result;


	cout << "\t LASALLE COLLEGE \n";
	cout << "\t --------------- \n";


	do {
		cout << "Enter the number of students(max 20): ";
		cin >> nbStudents;
	} while (nbStudents < 2 || nbStudents > 20);

	for (int I = 0; I < nbStudents; I++)
	{
		cout << "\nStudent " << I + 1 << endl;
		cout << "name: ";
		cin.ignore(80, '\n');
		getline(cin, studentNames[I]);
		cout << "grade: ";
		cin >> grades[I];

		if (bestGrade < grades[I])
		{
			bestGrade = grades[I];
		}

		if (worstGrade > grades[I])
		{
			worstGrade = grades[I];
		}

		if (grades[I] > 60 || grades[I] < 100)
		{
			result = "Pass";
			
		}

		else
		{
			result = "Fail";
			
		}

	}

	cout << "The Class \n\n";
	cout << "Names" << setw(40) << "Grades" << setw(20) << "Results \n\n\n";
	
	for (int I = 0; I < nbStudents; I++)
	{
		cout << studentNames[I] << setw(40) << grades[I] << setw(20) << result << endl;
	}
	
	system("pause");
	return 0;
}
