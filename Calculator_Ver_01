#include <iostream>
#include <string>
#include <iomanip>

using namespace std;

int main()
{
	short loadSection, mainMenu = 0, values, mathematicalValues, result = 0;

	
		cout << "\t    CALCULATOR \n";
		cout << "\t    ---------- \n";
		cout << "\t By: Glenn Sacony\n";

		cout << "1 - Addition \n";
		cout << "2 - Subtraction \n";
		cout << "3 - Multiplication \n";
		cout << "4 - Division \n";
		cout << "5 - Quit \n";
		cout << "Enter your choice(1-5): ";
		cin >> loadSection;
	
		if (loadSection == 1)
		{
			system("CLS");
			cout << "\t CALCULATOR \n";
			cout << "\t ---------- \n";
			cout << "\t Addition\n";
			cout << "Enter the number of values to add: ";
			cin >> values;
			

			for (int I = 0; I < values; I++)
			{
				cout << "Value " << I + 1 << ": ";
				cin >> mathematicalValues;
				result = mathematicalValues + result;
				cout << "The result is: " << result << endl;

			}
		}
		
	if (loadSection == 2)
	{
		system("CLS");
		cout << "\t CALCULATOR \n";
		cout << "\t ---------- \n";
		cout << "\t Subtraction\n";
		cout << "Enter the number of values to subtract: ";
		cin >> values;


		for (int I = 0; I < values; I++)
		{
			cout << "Value " << I + 1 << ": ";
			cin >> mathematicalValues;
			result = result - mathematicalValues;
			cout << "The result is: " << result << endl;
		}

	}
	if (loadSection == 3)
	{
		system("CLS");
		cout << "\t CALCULATOR \n";
		cout << "\t ---------- \n";
		cout << "\t Multiplication \n";
		cout << "Enter the number of values to multiply: ";
		cin >> values;

		for (int I = 0; I < values; I++)
		{
			cout << "Value " << I + 1 << ": ";
			cin >> mathematicalValues;
			result = result * mathematicalValues;
			cout << "The result is: " << result << endl;
		}
	}
	if (loadSection == 4)
	{
		system("CLS");
		cout << "\t CALCULATOR \n";
		cout << "\t ---------- \n";
		cout << "\t Division";
	}
	if (loadSection == 5)
	{
		system("CLS");
		cout << "System Quit";
	}


	system("pause");
	return 0;
}
